<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tbd.appprototype">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".TBDApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".AddListActivity"
            android:label="@string/title_activity_add_list"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".NetworkTestActivity"
            android:label="@string/title_activity_network_test"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".AddFriendActivity"
            android:label="@string/title_activity_add_friend"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ViewMyItemActivity"
            android:label="@string/title_activity_view_my_item"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".EditItemActivity"
            android:label="@string/title_activity_edit_item"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".FriendsListsActivity"
            android:label="@string/title_activity_friends_lists"
            android:parentActivityName=".FriendsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tbd.appprototype.FriendsActivity" />
        </activity>
        <activity
            android:name=".ListOfItemsActivity"
            android:label="@string/title_activity_list_of_items"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".AddItemActivity" />
        <activity
            android:name=".ViewFriendItemActivity"
            android:label="@string/title_activity_view_friend_item"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SendMessageActivity"
            android:label="@string/title_activity_send_message"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".FriendRequestsActivity"
            android:label="@string/title_activity_friend_requests"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ItemRequestsActivity"
            android:label="@string/title_activity_item_requests"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".EditListActivity"
            android:label="@string/title_activity_edit_list"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".CreateUserActivity"
            android:label="@string/title_activity_create_user"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MyListsActivity"
            android:label="@string/title_activity_my_lists"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".LendedItemsActivity"
            android:label="@string/title_activity_lended_items"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".BorrowedItemsActivity"
            android:label="@string/title_activity_borrowed_items"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
