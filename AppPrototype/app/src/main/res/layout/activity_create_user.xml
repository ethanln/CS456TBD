<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/themeBackground"
    tools:context="com.tbd.appprototype.LoginActivity">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User"
                android:fontFamily="sans-serif-light"
                android:textSize="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <!-- App Login -->
                <EditText
                    android:id="@+id/username"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@color/white"
                    android:inputType="text|textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholderColor"
                    android:textAlignment="center"

                    android:hint="@string/username" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@color/white"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholderColor"
                    android:textAlignment="center"

                    android:hint="@string/password"/>

                <Button
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="Create User"
                    android:textAlignment="center"
                    android:background="@color/loginButton"
                    android:textColor="@color/loginButtonText"
                    android:onClick="createUser"
                    android:nestedScrollingEnabled="true" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
