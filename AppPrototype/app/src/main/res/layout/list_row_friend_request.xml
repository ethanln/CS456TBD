<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/friend_request_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_gravity="left|top" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/friend_request_name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|bottom">
                <TextView
                    android:id="@+id/accept_friend_request_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="accept"
                    android:textColor="@color/dark_gray"
                    android:paddingRight="16dp"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/decline_friend_request_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="decline"
                    android:textColor="@color/dark_gray"
                    android:paddingRight="8dp"
                    android:clickable="true"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/friend_request_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/friend_request_position_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>


</FrameLayout>